# =============================================================================
# VANA REFINEMENT SERVICE ENVIRONMENT VARIABLES
# =============================================================================

# -----------------------------------------------------------------------------
# Chain Configuration
# -----------------------------------------------------------------------------
CHAIN_NETWORK=moksha
CHAIN_NETWORK_ENDPOINT=https://rpc.moksha.vana.org

# -----------------------------------------------------------------------------
# Authentication & Accounts
# -----------------------------------------------------------------------------
HOTKEY_MNEMONIC=your_hotkey_mnemonic_here
QUERY_ENGINE_ACCOUNT=your_query_engine_account_here

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------
DOCKER_TAG=latest
DOCKER_IMAGE_CACHE_DIR=/var/cache/vana/docker-images
DOCKER_IMAGE_CACHE_SIZE_GB=20.0
DOCKER_IMAGE_CACHE_TTL_DAYS=7
CONTAINER_TIMEOUT_SECONDS=60

# -----------------------------------------------------------------------------
# Background Processor Configuration
# -----------------------------------------------------------------------------
BACKGROUND_PROCESSOR_POLL_INTERVAL=5
BACKGROUND_PROCESSOR_MAX_CONCURRENT_JOBS=3
BACKGROUND_PROCESSOR_JOB_CLEANUP_TIMEOUT_MINUTES=60

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
V1_API_POLL_INTERVAL=2
V1_API_MAX_WAIT_TIME=900

# -----------------------------------------------------------------------------
# Environment & Debug
# -----------------------------------------------------------------------------
ENVIRONMENT=production
DEBUG_FILES_DIR=/app/debug/
STORES_DB_DIR=/app/data

# -----------------------------------------------------------------------------
# Monitoring & Logging (Phala deployments)
# -----------------------------------------------------------------------------
DOZZLA_USERS=base64_encoded_users_yml_content
SSH_USERNAME=your_ssh_username
SSH_PASSWORD=your_ssh_password
